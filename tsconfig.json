{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",

		"noImplicitAny": true,
		"strictNullChecks": false,
		"strictFunctionTypes": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"importHelpers": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,

		"outDir": "build/types",
		"sourceMap": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"suppressImplicitAnyIndexErrors": true,
		"downlevelIteration": true,
		"types": [
			"node",
			"jest",
			"jest-matcher-deep-close-to"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2018",
			"dom",
			"esnext",
			"es2017.sharedmemory"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"src/**/tests",
		"src/**/*.test.ts",
		"src/**/*.test.js"
	]
}
